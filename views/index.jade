extends layout

block content
  .off-canvas-wrapper
    .off-canvas-wrapper-inner(data-off-canvas-wrapper='')
      #offCanvas.off-canvas.position-left(data-off-canvas='')
        nav#playlist.left-off-canvas-menu
          #current
          #history
        .footer
          a(href='https://github.com/FusionWorks/Radio', target="_blank")
            i.fi-social-github
          a.logo-company(href='http://fusionworks.md/', target="_blank")
            img(alt='Fusion Works', src='images/logo.png')
          p.copyRights
            | Released under MIT license
            br
            | All songs and images belong to their owners
            br
            br
            | Copyright Â© 2016 FusionWorks

      .off-canvas-content(data-off-canvas-content='')
        #player.content-wrapper
          a.menu-button.indent(data-toggle="offCanvas")
            span
          .media-buttons(style="display: none;")
            .button-group.clearfix.float-center
              .spinner
                .rect1
                .rect2
                .rect3
                .rect4
                .rect5
              #player-nav(style="display: none;")
                .track-wrapper
                  .track(style="display: none;")
                a.button.columns.small-3(data-toggle='offCanvas')
                  i.fi-music
                a#play.button.columns.small-3
                  i.fi-play.active
                a#stop.button.columns.small-3
                  i.fi-stop
                div.button.columns.small-3.volume-btn
                  i.fi-volume
                  span.volume.hide-for-small-only
                    span#volume-slider.slider.vertical(data-end='100', data-initial-start='80', data-vertical='true')
                      span.slider-handle(aria-controls='actual-volume', data-slider-handle='', role='slider', tabindex='1', aria-valuemin=0, aria-valuemax=100, aria-valuenow=80)
                      span.slider-fill(data-slider-fill='')
                    input#actual-volume(type="hidden")
                    input#volume(disabled='disabled', type='text')
  script.
    window.opts = {
      track: !{track},
      history: !{history},
      config: !{configJSON}
    }
  script(src="http://#{config.hostname}:#{config.ws_port}/socket.io/socket.io.js")
  != js("main")

