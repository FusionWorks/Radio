extends layout

block content
  .off-canvas-wrapper
    .off-canvas-wrapper-inner(data-off-canvas-wrapper='')
      #offCanvas.off-canvas.position-left(data-off-canvas='')
        nav.left-off-canvas-menu
          .song-wrap.current-song
            .time
              i.fi-play
            .name= track.name
      .off-canvas-content(data-off-canvas-content='')
        #player.content-wrapper
          .media-buttons
            .button-group.clearfix.float-center
              .track-wrapper
                .track
              a.button.columns.small-3(data-toggle='offCanvas')
                i.fi-music
              a#play.button.columns.small-3
                i.fi-play.active
              a#stop.button.columns.small-3
                i.fi-stop
              a.button.columns.small-3.volume-btn
                i.fi-volume
                span.volume
                  span#volume-slider.slider.vertical(data-end='100', data-initial-start='80', clickSelect='true', data-slider='', data-vertical='true')
                    span.slider-handle(aria-controls='actual-volume', data-slider-handle='', role='slider', tabindex='1')
                    span.slider-fill(data-slider-fill='')
                  input#actual-volume(type="hidden")
                  input#volume(disabled=' ', type='number')
  script(src='http://localhost:3014/socket.io/socket.io.js')
  != js("main")

